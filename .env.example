# PredictBNB Environment Variables
# Copy this file to .env.local and fill in your values

# Required - WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Site Configuration
NEXT_PUBLIC_SITE_NAME=PredictBNB
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Prediction Markets on BNB Chain
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_OG_IMAGE=https://your-domain.com/og-image.jpg
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/yourrepo

# BNB Chain RPC URLs (Optional - using defaults if not set)
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed.binance.org/
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Network Configuration
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_DEFAULT_CHAIN_ID=97

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_ORACLE_API_URL=https://oracle-api.your-domain.com
NEXT_PUBLIC_MARKET_DATA_URL=https://market-data.your-domain.com

# AI Oracle API Keys (Optional - for AI-assisted analysis)
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_key_here
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_key_here

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Smart Contract Addresses (Update after deployment)
NEXT_PUBLIC_PREDICTION_MARKET_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AI_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_GASLESS_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000

# Private Keys (NEVER commit these! Only for contract deployment)
PRIVATE_KEY=your_deployer_private_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here
