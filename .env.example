# ============================================================================
# PredictBNB Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ----------------------------------------------------------------------------
# Frontend Configuration (Next.js - NEXT_PUBLIC_ vars are client-side)
# ----------------------------------------------------------------------------

# Required - WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Site Configuration
NEXT_PUBLIC_SITE_NAME=PredictBNB
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Prediction Markets on BNB Chain
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_OG_IMAGE=https://your-domain.com/og-image.jpg
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/yourrepo

# BNB Chain RPC URLs (Optional - using defaults if not set)
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed.binance.org/
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Network Configuration
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_DEFAULT_CHAIN_ID=97

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_ORACLE_API_URL=http://localhost:3001/api

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Smart Contract Addresses (Update after deployment)
NEXT_PUBLIC_PREDICTION_MARKET_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AI_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TRADER_REPUTATION_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_GASLESS_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000

# ----------------------------------------------------------------------------
# Backend Configuration (Server-side only - NOT exposed to client)
# ----------------------------------------------------------------------------

# Blockchain - Wallet private key for deploying contracts and oracle agent
# Get testnet BNB from: https://testnet.bnbchain.org/faucet-smart
PRIVATE_KEY=

# BSCScan API Key (for contract verification)
# Get from: https://bscscan.com/myapikey
BSCSCAN_API_KEY=

# ----------------------------------------------------------------------------
# AI Oracle Service Configuration
# ----------------------------------------------------------------------------

# OpenAI API Key (for GPT-4 analysis)
# Get from: https://platform.openai.com/api-keys
# Estimated cost: $0.10-0.30 per resolution
OPENAI_API_KEY=

# OpenAI Model (default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# Minimum confidence threshold (0-10000, default: 8000 = 80%)
MIN_CONFIDENCE_THRESHOLD=8000

# Oracle service port
ORACLE_SERVICE_PORT=3001

# Resolution check interval (milliseconds)
RESOLUTION_CHECK_INTERVAL=60000

# ----------------------------------------------------------------------------
# Data Source APIs (Crypto Markets)
# ----------------------------------------------------------------------------

# CoinGecko API Key (optional, free tier available)
# Get from: https://www.coingecko.com/en/api/pricing
# Free tier: 50 calls/min, no key required
COINGECKO_API_KEY=

# Binance API (optional, public endpoints available)
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# CoinMarketCap API Key (optional)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=

# ----------------------------------------------------------------------------
# Data Source APIs (Additional Categories)
# ----------------------------------------------------------------------------

# The Odds API (for sports markets)
# Get from: https://the-odds-api.com/
THEODDS_API_KEY=

# OpenWeather API (for weather markets)
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# News API (for sentiment analysis)
# Get from: https://newsapi.org/
NEWSAPI_KEY=

# ----------------------------------------------------------------------------
# IPFS Storage (Evidence Storage)
# ----------------------------------------------------------------------------

# Pinata API Keys (recommended)
# Get from: https://app.pinata.cloud/keys
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Alternative: Web3.Storage API Token
# Get from: https://web3.storage/
WEB3_STORAGE_TOKEN=

# Alternative: Infura IPFS
# Get from: https://infura.io/
INFURA_IPFS_PROJECT_ID=
INFURA_IPFS_PROJECT_SECRET=

# ----------------------------------------------------------------------------
# Gasless Transactions (Optional but Recommended)
# ----------------------------------------------------------------------------

# Gelato Relay API Key
# Get from: https://relay.gelato.network/
GELATO_RELAY_API_KEY=

# Biconomy API Key (alternative)
# Get from: https://dashboard.biconomy.io/
BICONOMY_API_KEY=

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------

# Sentry DSN (error tracking)
# Get from: https://sentry.io/
SENTRY_DSN=

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=

# Slack Webhook (alternative alerts)
SLACK_WEBHOOK_URL=

# Enable debug logging
DEBUG=false

# ----------------------------------------------------------------------------
# Database (Optional - for caching and analytics)
# ----------------------------------------------------------------------------

# MongoDB connection string
MONGODB_URI=

# Redis connection string (for caching)
REDIS_URL=

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------

# Admin dashboard password (bcrypt hash)
ADMIN_PASSWORD_HASH=

# JWT secret for API authentication
JWT_SECRET=

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# ----------------------------------------------------------------------------
# Cost Controls
# ----------------------------------------------------------------------------

# Max gas price in gwei (prevents expensive transactions)
MAX_GAS_PRICE_GWEI=10

# Max cost per resolution in USD
MAX_RESOLUTION_COST_USD=1.00

# Daily API budget in USD
DAILY_API_BUDGET_USD=10.00

# ----------------------------------------------------------------------------
# Testing
# ----------------------------------------------------------------------------

# Node environment
NODE_ENV=development

# Use mock APIs in development
USE_MOCK_DATA=false

# Test wallet private key (DO NOT use in production)
TEST_PRIVATE_KEY=

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
#
# Required for basic operation:
# - NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID
# - PRIVATE_KEY (for deployment and oracle)
# - OPENAI_API_KEY (for AI oracle)
# - PINATA_API_KEY + PINATA_SECRET_KEY (for evidence storage)
#
# Optional but recommended:
# - BSCSCAN_API_KEY (for contract verification)
# - COINGECKO_API_KEY (for better rate limits)
# - GELATO_RELAY_API_KEY (for gasless transactions)
# - SENTRY_DSN (for error tracking)
#
# Get testnet BNB:
# https://testnet.bnbchain.org/faucet-smart
#
# Estimated monthly costs (testnet):
# - OpenAI API: $10-30/month (depending on volume)
# - IPFS Storage: $0-5/month (Pinata free tier sufficient)
# - Gas costs: Negligible on testnet (free BNB from faucet)
#
# Production costs will be higher - monitor usage carefully!
# ============================================================================
