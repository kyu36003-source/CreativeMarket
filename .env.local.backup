# ============================================================================
# PredictBNB Environment Configuration - BSC TESTNET
# ============================================================================
# IMPORTANT: Add your actual values below and NEVER commit this file!

# ----------------------------------------------------------------------------
# Frontend Configuration (NEXT_PUBLIC_ vars are exposed to client)
# ----------------------------------------------------------------------------

# WalletConnect Project ID (Get free at: https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Site Configuration
NEXT_PUBLIC_SITE_NAME=PredictBNB
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Prediction Markets on BNB Chain
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Network Configuration - BSC TESTNET (Chain ID: 97)
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_DEFAULT_CHAIN_ID=97
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Smart Contract Addresses - WILL BE UPDATED AFTER DEPLOYMENT
NEXT_PUBLIC_PREDICTION_MARKET_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AI_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TRADER_REPUTATION_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_GASLESS_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000

# ----------------------------------------------------------------------------
# Backend Configuration (Server-side only - NOT exposed to client)
# ----------------------------------------------------------------------------

# Your wallet private key for deployment and oracle operations
# Get testnet BNB from: https://testnet.bnbchain.org/faucet-smart
# IMPORTANT: Use a NEW wallet, NEVER your mainnet wallet!
PRIVATE_KEY=your_private_key_here

# BSCScan API Key (Optional - for contract verification)
BSCSCAN_API_KEY=

# ----------------------------------------------------------------------------
# AI Oracle Service Configuration
# ----------------------------------------------------------------------------

# OpenAI API Key (REQUIRED for AI oracle)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
MIN_CONFIDENCE_THRESHOLD=8000

# Oracle Service Configuration
ORACLE_SERVICE_PORT=3001
RESOLUTION_CHECK_INTERVAL=60000

# ----------------------------------------------------------------------------
# IPFS Storage for Evidence (REQUIRED)
# ----------------------------------------------------------------------------

# Pinata API Keys (Free tier available)
# Get from: https://app.pinata.cloud/keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

